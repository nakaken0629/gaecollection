<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <servlet>
    <servlet-name>MakeAnswerTask</servlet-name>
    <servlet-class>com.appspot.hiramekanaito.MakeAnswerTaskServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MakeAnswer</servlet-name>
    <servlet-class>com.appspot.hiramekanaito.MakeAnswerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>com.appspot.hiramekanaito.IndexServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MakeAnswerTask</servlet-name>
    <url-pattern>/task/makeanswer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MakeAnswer</servlet-name>
    <url-pattern>/cron/makeanswer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/index/*</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin</web-resource-name>
      <url-pattern>/cron/*</url-pattern>
      <url-pattern>/task/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.html</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>

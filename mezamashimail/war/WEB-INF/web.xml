<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>com.appspot.mezamashimail.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>WakeupTask</servlet-name>
    <servlet-class>com.appspot.mezamashimail.WakeupTaskServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Wakeup</servlet-name>
    <servlet-class>com.appspot.mezamashimail.WakeupServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Receive</servlet-name>
    <servlet-class>com.appspot.mezamashimail.ReceiveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WakeupTask</servlet-name>
    <url-pattern>/task/wakeuptask</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Wakeup</servlet-name>
    <url-pattern>/cron/wakeup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Receive</servlet-name>
    <url-pattern>/_ah/mail/eri@mezamashimail.appspotmail.com</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>Encoding</filter-name>
    <filter-class>com.appspot.mezamashimail.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin</web-resource-name>
      <url-pattern>/task/*</url-pattern>
      <url-pattern>/cron/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.html</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
